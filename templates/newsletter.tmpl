{{ define "head" }}
  <title>Newsletter | HackSoc</title>
  <link rel="stylesheet" type="text/css" href="assets/css/newsletter.css" />
{{ end }}


{{ define "content" }}
  <section id="">
    <h1>Newsletter</h1>
    <div class="newsletter-form">
      <form method="post" action="newsletter">
        <div>
          <input type="checkbox" name="events" checked>Email me when new events happen.
        </div>
        <div>
          <input type="checkbox" name="articles" checked>Email me when new articles are posted.
        </div>
        <div>
          <input class="submit-button" type="submit" value="Subscribe">
          <div class="user-email">
            <input type="text" name="email" placeholder="Your Email">
          </div>
        </div>
      </form>
    </div>
  </section>
{{ end }}