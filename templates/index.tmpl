{{ define "head" }}
  <title>HackSoc</title>
  <link rel="stylesheet" type="text/css" href="assets/css/index.css" />
{{ end }}


{{ define "content" }}
  <nav id="mobile-menu">
    <div class="aspect-ratio-2-3">
      <div id="tiles">
        <div class="tile-row">
          <a class="tile" href="/events" style="background-image: url('/assets/images/index/events.png')">
            <div>
              <h2>Events</h2>
            </div>
          </a><!--
          --><a class="tile" href="/team" style="background-image: url('/assets/images/index/team.png')">
            <div>
              <h2>Team</h2>
            </div>
          </a>
        </div>
        <div class="tile-row">
          <a class="tile" href="/gallery" style="background-image: url('/assets/images/index/gallery.png')">
            <div>
              <h2>Gallery</h2>
            </div>
          </a><!--
          --><a class="tile" href="/partners" style="background-image: url('/assets/images/index/partners.png')">
            <div>
              <h2>Partners</h2>
            </div>
          </a>
        </div>
        <div class="tile-row">
          <a class="tile" href="/newsletter" style="background-image: url('/assets/images/index/newsletter.png')">
            <div>
              <h2>Newsletter</h2>
            </div>
          </a><!--
          --><a class="tile" href="/contact" style="background-image: url('/assets/images/index/contact.png')">
            <div>
              <h2>Contact</h2>
            </div>
          </a>
        </div>
      </div>
    </div>
  </nav>
  <header id="widescreen-large-header">
    <h1>HackSoc</h1>
    <h2>An Interesting Slogan</h2>
    
    {{ if .HasUpcomingEvent }}
      <a href="">
        {{ .EventName }}
        <br>
        {{ .EventDate }}
      </a>
    {{ end }}
  </header>
{{ end }}