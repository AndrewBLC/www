{{ define "head" }}
  <title>Events | HackSoc</title>
  <link rel="stylesheet" type="text/css" href="assets/css/events.min.css" />
{{ end }}


{{ define "content" }}
  <section id="events">
    <h1>Events</h1>

        <div class="event-group">

            {{if .HaveRightNow}}
                <h2>Right now</h2>
                <hr/>
                {{ template "event-list" .EventGroup.RightNow }}
            {{end}}

            {{if .HaveUpcoming}}
              <h2>Upcoming</h2>
              <hr/>
            {{ template "event-list" .EventGroup.Upcoming }}

            {{end}}

          <h2>Past events</h2>
          <hr/>
          {{ template "event-list" .EventGroup.Past }}

        </div>
  </section>

{{end}}